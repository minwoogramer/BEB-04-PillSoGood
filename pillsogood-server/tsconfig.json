{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true, 
    "module": "commonjs",
    "outDir": "dist",         
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6",
      "es2018",
       "esnext.asynciterable"
    ],
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false   
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/*.tsx",
    "./src/*.ts"
  ]
}